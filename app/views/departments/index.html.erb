<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <div class="panel panel-info">
        <div class="panel-heading">Add Department</div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3"></div>
              <div class="col-md-5">
                <%=render 'form'%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <div class="panel panel-info">
        <div class="panel-heading">Departments Employees</div>
        <div class="panel-body">
          <div class="table-responsive" style=" width: 100%; margin: 0; overflow-y: auto;">
            <table class="table table-bordered table-hover table-condensed">
              <thead>
                <tr>
                  <th>Serial</th>
                  <th>Name</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @departments.each_with_index do |department,index| %>
                    <td><%= index+1 %></td>
                    <td><%= department.name%></td>
                    <td>
                        <%= link_to "Delete", department_path(department), method: :delete, data: {confirm: "Are you sure?"} %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>  
</div>    
