<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <div class="panel panel-info">
        <div class="panel-heading">Add Leave Allotments</div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-3"></div>
              <div class="col-md-5">
                <%=render 'form'%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <div class="panel panel-info">
        <div class="panel-heading">Listing Leaves</div>
        <div class="panel-body">
          <table class="table table-bordered", id="myTable">
            <thead>
              <tr>
                <th>Employee</th>
                <th>Leave structure</th>
                <th>Operations</th>
              </tr>
            </thead>

            <tbody>
              <% @leave_allots.each do |leave_allot| %>
                <tr>
                  <td><%= leave_allot.employee.name%></td>
                  <td><%= leave_allot.leave_structure.name%></td>
                  <td><%= link_to 'Destroy', leave_allot, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <%= link_to 'Settings', leave_allot_leave_employees_path(leave_allot) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
